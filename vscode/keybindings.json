// VS Code custom shortcuts.
// This JSON file support a more flexible parser (and comments).
[
  // Navigation (global).
  {
    "key": "alt+down",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "alt+left",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "alt+pagedown",
    "command": "workbench.action.nextEditorInGroup"
  },
  {
    "key": "alt+pageup",
    "command": "workbench.action.previousEditorInGroup"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "alt+up",
    "command": "workbench.action.navigateUp"
  },

  // Navigation (sidebar and panel).
  {
    "key": "alt+s",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "alt+p",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "alt+t",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },

  // Opening and closing editors.
  {
    "key": "ctrl+b shift+\\",
    "command": "workbench.action.splitEditor"
  },
  {
    "key": "ctrl+b -",
    "command": "workbench.action.splitEditorOrthogonal"
  },

  // Disable default bindings.
  {
    "key": "ctrl+\\",
    "command": "-workbench.action.splitEditor"
  },
  {
    "key": "ctrl+`",
    "command": "-workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "ctrl+pagedown",
    "command": "-workbench.action.nextEditor"
  },
  {
    "key": "ctrl+pageup",
    "command": "-workbench.action.previousEditor"
  },
  {
    "key": "ctrl+shift+e",
    "command": "-workbench.view.explorer"
  },
  {
    "key": "ctrl+b",
    "command": "-cursorLeft"
  },
  {
    "key": "ctrl+j",
    "command": "-workbench.action.togglePanel"
  },
  {
    "key": "ctrl+1",
    "command": "-workbench.action.focusFirstEditorGroup"
  },

  // Rebind different MacOS defaults.
  {
    "key": "cmd+e",
    "command": "workbench.action.quickOpen",
    "when": "isMac"
  },
  {
    "key": "ctrl+t",
    "command": "workbench.action.showAllSymbols",
    "when": "isMac"
  },
  {
    "key": "cmd+b shift+\\",
    "command": "workbench.action.splitEditor",
    "when": "isMac"
  },
  {
    "key": "cmd+b -",
    "command": "workbench.action.splitEditorOrthogonal",
    "when": "isMac"
  },
  {
    "key": "shift+alt+down",
    "command": "editor.action.insertCursorBelow",
    "when": "isMac && editorTextFocus"
  },
  {
    "key": "shift+alt+up",
    "command": "editor.action.insertCursorAbove",
    "when": "isMac && editorTextFocus"
  },

  // Un-bind unexpected MacOS defaults.
  {
    "key": "cmd+b",
    "command": "-workbench.action.toggleSidebarVisibility",
    "when": "isMac"
  },
  {
    "key": "alt+cmd+down",
    "command": "-editor.action.insertCursorAbove",
    "when": "isMac"
  },
  {
    "key": "alt+cmd+up",
    "command": "-editor.action.insertCursorBelow",
    "when": "isMac"
  }
]
